<div class="container">
	<h1>New {{title}}</h1>

	<div class="body">
		<form class="" action="/api/v1/{{name}}/create" method="post">
			{{#each elements}}
        <div class="form-group">
					<label for="">{{name}}</label>
					<input type="{{type}}" name="{{name}}" value="" class="form-control" required="{{required}}">
				</div>
			{{/each}}
        <div class="form-group">
			<button type="submit">Save {{title}}</button>
				</div>
		</form>
		<br />
		<a href="/{{name}}">Index</a>
	</div>
</div>
